				}



				if(inputLine.equals("質問取り消し")) {//新しく追加しました。
					a=br[playerNo].readLine();//取り消したい質問内容の受信
					String name=hashA1.get(playerNo);
					FileInputStream inFile1 = new FileInputStream("Question.obj");
