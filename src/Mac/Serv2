						Question k=ques(a);
					    if(k!=null) {
					    	k.setCandidates(er);


					    qnew(k);//ファイルの内容を更新
					    }






						}
					if(inputLine.equals("オファー来てるかな")) {
						String name=hashA1.get(playerNo);

