<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".ConnectActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/connecting_server"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="80dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">

        <!--<EditText
            android:id="@+id/IP_address_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP Adress"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:nextFocusDown="@+id/port_number_edittext"
            android:inputType="text"/>

        <EditText
            android:id="@+id/port_number_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Port"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:maxLines="1"
            android:inputType="text"/>-->

        <Space
            android:layout_width="match_parent"
            android:layout_height="70dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/connect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="connect" />

            <!--<Button
                android:id="@+id/go_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ログインへ" />-->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>