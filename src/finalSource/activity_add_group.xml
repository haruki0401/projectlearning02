<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroupActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="461dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/group_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:text="@string/addgroupName"
            android:textSize="24sp"
            android:inputType="text"
            android:maxLines="1"/>

        <EditText
            android:id="@+id/group_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_style"
            android:gravity="left|center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:nextFocusDown="@+id/group_expl_edittext"
            android:inputType="text"
            android:maxLines="1"
            android:hint="グループ名"/>

        <TextView
            android:id="@+id/group_expl_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:text="@string/groupExpl"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/group_expl_edittext"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/frame_style"
            android:gravity="top|left"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:hint="グループの説明(一行で入力)" />
    </LinearLayout>

    <Button
        android:id="@+id/add_group_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:text="@string/addGroup" />


</LinearLayout>